---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import picProfile from "../assets/profile.jpeg";
---

<Layout>
  <section class="flex flex-col gap-6">
    <Image
      src={picProfile}
      alt="Profile picture"
      width={100}
      height={100}
      class="rounded-2xl w-24 h-24 object-cover opacity-90"
    />
    <div class="space-y-3">
      <h1 class="text-primary">
        hey, i'm <span class="text-accent-blue font-medium">[your name]</span> ðŸ‘‹
      </h1>
      <p class="text-primary leading-relaxed max-w-lg">
        just a person who likes stuff. welcome to my corner of the internet
        <br />
        where i share what i'm into right now.
      </p>
    </div>
  </section>

  <!-- Listen Section -->
  <section class="space-y-4">
    <h2 class="font-medium tracking-wide">
      currently listening to / recently listened to
    </h2>
    <div class="flex flex-col md:flex-row gap-6 items-start">
      <!-- Album Art Placeholder -->
      <div
        class="w-24 h-24 bg-darkblue-200/50 rounded-xl flex items-center justify-center shrink-0 border border-white/5"
      >
        <div
          class="w-8 h-8 rounded-full border-2 border-primary-opaque/20 flex items-center justify-center"
        >
          <div class="w-2 h-2 rounded-full bg-primary-opaque/40"></div>
        </div>
      </div>

      <!-- Content -->
      <div class="flex flex-col w-full gap-3">
        <div class="flex items-center gap-2 text-sm">
          <span class="text-accent-blue font-medium">song title</span>
          <span class="text-primary-opaque text-xs">â€¢</span>
          <span class="text-accent-gold font-medium">artist name</span>
        </div>

        <!-- Song List Grid -->
        <div
          class="flex flex-wrap gap-y-2 gap-x-4 text-xs text-primary-opaque/75"
        >
          <p>cigarettes after sex - apocalypse</p>
          <p>mac demarco - chamber of reflection</p>
          <p>there is a light that never goes out</p>
          <p>clairo - bags</p>
          <p>rex orange county - loving is easy</p>
          <p>mitski - nobody</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Watch/Read Section -->
  <section class="space-y-4">
    <h2 class="font-medium tracking-wide">watched/read recently</h2>
    <div class="flex flex-col md:flex-row gap-6 items-start">
      <!-- Poster Placeholder -->
      <div
        class="w-24 h-32 bg-darkblue-200/50 rounded-xl flex items-center justify-center shrink-0 border border-white/5"
      >
        <!-- Film Icon -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-primary-opaque/40"
          ><rect width="18" height="18" x="3" y="3" rx="2" ry="2"
          ></rect><polyline points="7 3 7 21"></polyline><polyline
            points="17 3 17 21"></polyline><line x1="3" x2="21" y1="12" y2="12"
          ></line><line x1="3" x2="7" y1="7" y2="7"></line><line
            x1="3"
            x2="7"
            y1="17"
            y2="17"></line><line x1="17" x2="21" y1="17" y2="17"></line><line
            x1="17"
            x2="21"
            y1="7"
            y2="7"></line></svg
        >
      </div>

      <!-- Content -->
      <div class="flex flex-col w-full gap-3">
        <div class="flex items-center gap-2 text-sm">
          <span class="text-accent-blue font-medium">title</span>
          <span class="text-primary-opaque text-xs">â€¢</span>
          <span class="text-accent-gold font-medium tracking-wider"
            >progress info</span
          >
        </div>

        <!-- List Grid -->
        <div
          class="flex flex-wrap gap-y-2 gap-x-4 text-xs text-primary-opaque/75"
        >
          <p>mob psycho 100 - episode 8</p>
          <p>chainsaw man 2</p>
          <p>perfect blue - 1997</p>
          <p>bojack horseman - s6e15</p>
          <p>norwegian wood</p>
          <p>everything everywhere all at once</p>
          <p>fleabag - season 2</p>
          <p>oyasumi punpun - volume 7</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
