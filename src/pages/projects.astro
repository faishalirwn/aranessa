---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="flex flex-col gap-6">
    <!-- Header -->
    <h1 class="font-medium text-primary tracking-wide">projects</h1>

    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 items-stretch">
      <!-- Card 1 -->
      <article class="flex flex-col gap-4 group">
        <div
          class="bg-darkblue-200/50 rounded-2xl aspect-video w-full flex items-center justify-center border border-white/5 transition-colors group-hover:border-white/10 group-hover:bg-darkblue-200/80"
        >
          <!-- Icon Placeholder -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-primary-opaque/20 transition-transform group-hover:scale-110"
            ><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line
              x1="3"
              y1="9"
              x2="21"
              y2="9"></line><line x1="9" y1="21" x2="9" y2="9"></line></svg
          >
        </div>
        <div class="space-y-2">
          <div class="flex items-center justify-between">
            <h3 class="text-accent-blue font-medium">nebula dashboard</h3>
            <span
              class="text-sm lowercase text-accent-gold border border-primary-opaque/20 px-2 py-0.5 rounded-full"
              >react</span
            >
          </div>
          <p class="text-sm text-primary-opaque/75 leading-relaxed">
            a minimalist workspace for focus and productivity. featuring custom
            widgets and a distraction-free mode.
          </p>
        </div>
      </article>

      <!-- Card 2 -->
      <article class="flex flex-col gap-4 group">
        <div
          class="bg-darkblue-200/50 rounded-2xl aspect-video w-full flex items-center justify-center border border-white/5 transition-colors group-hover:border-white/10 group-hover:bg-darkblue-200/80"
        >
          <!-- Icon Placeholder -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-primary-opaque/20 transition-transform group-hover:scale-110"
            ><circle cx="12" cy="12" r="10"></circle><path
              d="m4.93 4.93 14.14 14.14"></path><path d="m14.8 9.2-5.6 5.6"
            ></path></svg
          >
        </div>
        <div class="space-y-2">
          <div class="flex items-center justify-between">
            <h3 class="text-accent-blue font-medium">monolith arch</h3>
            <span
              class="text-sm lowercase text-accent-gold border border-primary-opaque/20 px-2 py-0.5 rounded-full"
              >design</span
            >
          </div>
          <p class="text-sm text-primary-opaque/75 leading-relaxed">
            exploring brutalist digital architecture. a collection of layout
            experiments focused on hierarchy and negative space.
          </p>
        </div>
      </article>
    </div>
  </div>
</Layout>
