---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
---

<Layout>
  <div class="flex flex-col gap-10">
    <!-- Recent Scrobbles -->
    <section class="space-y-6">
      <h2
        class="flex items-center gap-2 text-primary font-medium tracking-wide"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-accent-blue"
          ><line x1="12" y1="20" x2="12" y2="10"></line><line
            x1="18"
            y1="20"
            x2="18"
            y2="4"></line><line x1="6" y1="20" x2="6" y2="16"></line></svg
        >
        recent scrobbles
      </h2>

      <div class="space-y-4">
        <!-- Item 1 -->
        <div class="flex items-center justify-between group">
          <div class="flex items-center gap-4">
            <div
              class="w-12 h-12 bg-zinc-800 rounded-md overflow-hidden relative border border-white/5"
            >
              <div class="absolute inset-0 bg-stone-300 opacity-60"></div>
              <!-- Simple graphic for art -->
              <div class="absolute inset-2 border border-black/20"></div>
            </div>
            <div class="flex flex-col">
              <span
                class="text-sm font-medium text-white group-hover:text-accent-blue transition-colors"
                >apocalypse</span
              >
              <span class="text-xs text-primary-opaque"
                >cigarettes after sex</span
              >
            </div>
          </div>
          <span class="text-xs text-primary-opaque/50">now playing</span>
        </div>

        <!-- Item 2 -->
        <div class="flex items-center justify-between group">
          <div class="flex items-center gap-4">
            <div
              class="w-12 h-12 bg-zinc-800 rounded-md overflow-hidden relative border border-white/5"
            >
              <div class="absolute inset-0 bg-stone-300 opacity-60"></div>
              <div class="absolute bottom-0 w-full h-1/3 bg-stone-400"></div>
            </div>
            <div class="flex flex-col">
              <span
                class="text-sm font-medium text-primary group-hover:text-accent-blue transition-colors"
                >chamber of reflection</span
              >
              <span class="text-xs text-primary-opaque">mac demarco</span>
            </div>
          </div>
          <span class="text-xs text-primary-opaque/50">4m ago</span>
        </div>

        <!-- Item 3 -->
        <div class="flex items-center justify-between group">
          <div class="flex items-center gap-4">
            <div
              class="w-12 h-12 bg-zinc-800 rounded-md overflow-hidden relative border border-white/5 flex items-center justify-center"
            >
              <div
                class="w-3 h-3 rounded-full bg-white/20 ring-1 ring-white/10"
              >
              </div>
            </div>
            <div class="flex flex-col">
              <span
                class="text-sm font-medium text-primary group-hover:text-accent-blue transition-colors"
                >bags</span
              >
              <span class="text-xs text-primary-opaque">clairo</span>
            </div>
          </div>
          <span class="text-xs text-primary-opaque/50">12m ago</span>
        </div>

        <!-- Item 4 -->
        <div class="flex items-center justify-between group">
          <div class="flex items-center gap-4">
            <div
              class="w-12 h-12 bg-zinc-800 rounded-md overflow-hidden relative border border-white/5"
            >
              <div class="absolute inset-0 bg-orange-100 opacity-20"></div>
              <div
                class="absolute bottom-2 left-2 right-2 top-2 bg-stone-600/40 rounded-sm"
              >
              </div>
            </div>
            <div class="flex flex-col">
              <span
                class="text-sm font-medium text-primary group-hover:text-accent-blue transition-colors"
                >nobody</span
              >
              <span class="text-xs text-primary-opaque">mitski</span>
            </div>
          </div>
          <span class="text-xs text-primary-opaque/50">24m ago</span>
        </div>
      </div>
    </section>

    <!-- Top 90 Days -->
    <section class="space-y-6">
      <h2
        class="flex items-center gap-2 text-primary font-medium tracking-wide"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-accent-blue"
          ><polyline points="22 7 13.5 15.5 8.5 10.5 2 17"></polyline><polyline
            points="16 7 22 7 22 13"></polyline></svg
        >
        top of the last 90 days
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Artists -->
        <div class="space-y-4">
          <h3
            class="text-xs font-bold text-primary-opaque tracking-wider border-b border-white/5 pb-2"
          >
            top artists
          </h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between text-sm group">
              <span
                class="text-primary-opaque group-hover:text-primary transition-colors"
                >radiohead</span
              >
              <span class="text-accent-gold text-xs font-medium">842 plays</span
              >
            </div>
            <div class="flex items-center justify-between text-sm group">
              <span
                class="text-primary-opaque group-hover:text-primary transition-colors"
                >the smiths</span
              >
              <span class="text-accent-gold text-xs font-medium">621 plays</span
              >
            </div>
            <div class="flex items-center justify-between text-sm group">
              <span
                class="text-primary-opaque group-hover:text-primary transition-colors"
                >slowdive</span
              >
              <span class="text-accent-gold text-xs font-medium">518 plays</span
              >
            </div>
            <div class="flex items-center justify-between text-sm group">
              <span
                class="text-primary-opaque group-hover:text-primary transition-colors"
                >beach house</span
              >
              <span class="text-accent-gold text-xs font-medium">492 plays</span
              >
            </div>
          </div>
        </div>

        <!-- Albums -->
        <div class="space-y-4">
          <h3
            class="text-xs font-bold text-primary-opaque tracking-wider border-b border-white/5 pb-2"
          >
            top albums
          </h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between text-sm group">
              <span
                class="text-primary-opaque group-hover:text-primary transition-colors"
                >in rainbows</span
              >
              <span class="text-accent-gold text-xs font-medium">312 plays</span
              >
            </div>
            <div class="flex items-center justify-between text-sm group">
              <span
                class="text-primary-opaque group-hover:text-primary transition-colors"
                >souvlaki</span
              >
              <span class="text-accent-gold text-xs font-medium">284 plays</span
              >
            </div>
            <div class="flex items-center justify-between text-sm group">
              <span
                class="text-primary-opaque group-hover:text-primary transition-colors"
                >stratosphere</span
              >
              <span class="text-accent-gold text-xs font-medium">215 plays</span
              >
            </div>
            <div class="flex items-center justify-between text-sm group">
              <span
                class="text-primary-opaque group-hover:text-primary transition-colors"
                >blonde</span
              >
              <span class="text-accent-gold text-xs font-medium">198 plays</span
              >
            </div>
          </div>
        </div>

        <!-- Tracks -->
        <div class="space-y-4">
          <h3
            class="text-xs font-bold text-primary-opaque tracking-wider border-b border-white/5 pb-2"
          >
            top tracks
          </h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between text-sm group">
              <span
                class="text-primary-opaque group-hover:text-primary transition-colors"
                >weird fishes</span
              >
              <span class="text-accent-gold text-xs font-medium">86 plays</span>
            </div>
            <div class="flex items-center justify-between text-sm group">
              <span
                class="text-primary-opaque group-hover:text-primary transition-colors"
                >40 days</span
              >
              <span class="text-accent-gold text-xs font-medium">74 plays</span>
            </div>
            <div class="flex items-center justify-between text-sm group">
              <span
                class="text-primary-opaque group-hover:text-primary transition-colors"
                >sleep</span
              >
              <span class="text-accent-gold text-xs font-medium">62 plays</span>
            </div>
            <div class="flex items-center justify-between text-sm group">
              <span
                class="text-primary-opaque group-hover:text-primary transition-colors"
                >self control</span
              >
              <span class="text-accent-gold text-xs font-medium">59 plays</span>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
